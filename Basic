void deliveryboy()
{
	struct dboy d;
	printf("Enter username: ");
	scanf("%c",&d.dusername);
	
	printf("Enter pass: ");
	scanf("%f",&d.dpass);
	
	deliverystatus();                                   //check availability of delivery
}
int main()
{
	int n;
	while(1)
	{
		printf("New Account press 1 \n login press 2 \n press 3 if you are delvery boy \n press any key for exit");
		scanf("%d",&n);
		
		switch (n)
		{
			
			case 1:
			{
				createAcc();
				break;
			}
			case 2:
			{
				login();
				break;
			}
			case 3:
				{
					deliveryboy();
					break;
				}
			default :
			{
				exit(1);
			}
		}
	}
}
