struct user                          // user login and passsword structure
{
	char username[25];
	char userpass[10];
};
struct username                         // user details structure
{
	char personNamef[25];
	char personNamel[25];
	char Email[40];
	long long phoneNo;
	char address[100];
	long long cardno;
};
struct dboy{
	char dusername[25];
	char dpass[16];
};

